# Sombreando - Configurações de Ambiente

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
DATABASE_URL=postgresql://sombreando:password@localhost:5432/sombreando_db

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# Email Settings (2FA)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key
MERCADO_PAGO_WEBHOOK_SECRET=your-webhook-secret

# Mapbox
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Railway Deploy
RAILWAY_STATIC_URL=
RAILWAY_VOLUME_MOUNT_PATH=/app/media

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (Cache/Sessions)
REDIS_URL=redis://localhost:6379/0

# File Storage
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles

